@using Data.Models
@model List<Product>

@{
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Produtcs</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> Add Product
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Image
            </th>
            <th>
                Product Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                Product Description
            </th>
            <th>
                Product Price
            </th>
            <th>
                Product Stock
            </th>
            <th>
                Category Id
            </th>
            <th>
                Product Changed Time
            </th>
            <th>
                Product Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    <img style="width:150px;height:150px" src="data:image/png;base64,@obj.ProductImageBase64">
                </td>
                <td>
                    @obj.ProductId
                </td>
                <td>
                    @obj.ProductName
                </td>
                <td>
                    @obj.ProductDescription
                </td>
                <td>
                    @obj.ProductPrice
                </td>
                <td>
                    @obj.ProductStock
                </td>
                <td>
                    @obj.CategoryId
                </td>
                <td>
                    @obj.LastUpdatedTime
                </td>
                <td>
                    <div class="w-70 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Update" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-pen"></i> Edit</a>
                    </div>
                    <div class="w-70 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-danger mx-2" style="margin-top:5%"> <i class="bi bi-trash3-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table> 